mode "graphics"

;
; Visualization from https://worrydream.com/LearnableProgramming/
;

; draw lines in black
set stroke = "black"

for shift = 0 to 600 by 25 do
  ; uncomment to randomly change colors
  ; set stroke = color(rand(), rand(), rand())

  line shift, 0, 600, shift

  ; diagonal symmetry, just for fun
  line 600-shift, 600, 0, 600-shift

  snapshot
end
