display "graphics"

t = text(60, 60, "Hi there", 50)
draw t, "blue"
fill t, none

colors = list()
repeat 6 do add colors, rgb(rand(), rand(), rand())

box = crect(0, 0, 60, 40)
dot = crect(0, 0, 10, 10)
fill dot, "white"

for t from 1 to 360 do
  move box, t, t
  move dot, t, t
  rotate box, t
  rotate dot, -t*4
  scale box, t/180
  fill box, colors[floor(t/30) % len(colors) + 1]
  alpha box, t/360
  ;sleep 1/250
  repaint
end
