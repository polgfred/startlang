; draw shapes see-thru
opacity 1/4

begin random_color do
  ; randomly generate a fill color
  local red = rand()
  local green = rand()
  local blue = rand()
  local rgb = color(red, green, blue)
  snapshot

  return rgb
end

; count from 0 to 360 in 3 degree increments
for a from 0 to 360 by 5 do
  fill random_color()

  ; set the rotation and scale factor
  rotate a
  scale a/60

  ; draw a 60x40 box
  rect a, a, 60, 40
end
