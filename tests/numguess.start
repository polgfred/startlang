;
; Classic number guessing game
;

mode "text"

; pick a random number between 1 and 100
let number = rand(1, 100)

print "Your guesses:"

repeat 10 do
  ; ask for a guess
  let guess = input("Guess a number between 1 and 100:")

  ; if you didn't enter anything, just quit
  if guess = "" then
    print "Goodbye!"
    exit
  end

  ; convert the guess to a number
  guess = num(guess)

  stack do
    set direction = "row"

    print guess

    ; check if it was too low or too high
    if guess = number then
      print "You guessed it!"
    else if guess < number then
      print "Too low."
    else if guess > number then
      print "Too high."
    end
  end

  ; don't keep guessing
  if guess = number then exit
end

; :-(
print "Sorry, out of guesses."
