let xaxis = line(0,360,720,360)
stroke xaxis, "lightgrey"

let yaxis = line(360,0,360,720)
stroke yaxis, "lightgrey"

let pi = 4*atan(1)
let torad = pi/180
let todeg = 180/pi

for x1 in range(-360,355,5) do
  let x2 = x1+5
  let y1 = 5*todeg*sin(torad*x1/2)
  let y2 = 5*todeg*sin(torad*x2/2)
  let seg = line(360+x1,360-y1,360+x2,360-y2)
  stroke seg, "blue"
end
