xaxis = line(0,360,720,360)
stroke xaxis, "lightgrey"

yaxis = line(360,0,360,720)
stroke yaxis, "lightgrey"

pi = 4*atan(1)
torad = pi/180
todeg = 180/pi

count x1 from -360 to 355 by 5 do
  x2 = x1+5
  y1 = 5*todeg*sin(torad*x1/2)
  y2 = 5*todeg*sin(torad*x2/2)
  seg = line(360+x1,360-y1,360+x2,360-y2)
  stroke seg, "blue"
  refresh
end
